<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/home.css">
    <link rel="stylesheet" href="/assets/css/home.css">
    <title>Calendar</title>
</head>
<body>
    <nav class="navbar">
        <ul>
            <a href="/">
                home
            </a>
            <a href="/event/calendar">
                calendar
            </a>
            <a href="#">
                flights
            </a>
            <a href="#">
                hotels
            </a>
        </ul>
        
    </nav>  
    <div class="main">
        <div class="all_events">
            <h1>All Events:</h1>
        </div>
        <div id="calendar">
            <h1>August</h1>
            <a id="add_event" href="/event/add_event">Add Event</a>
            <div id="calendar-header">
                <% for (let i = 0; i < days.length; i++) { %>
                    <h1 class="name"><%=days[i] %></h1>
                <% } %>
            </div>
            <div id="calendar-days">
                <div class="empty"></div>
                <% for (let i = 1; i <= 31; i++) { %>
                    <div class="day" id="<%=i %>">
                        <% for (let e = 0; e < all_events.length; e++) { %>
                            <% if (all_events[e]["day"] === i) { %>
                                <div class="eventname">
                                    <%=all_events[e]["name"] %>
                                </div>
                                <div class="eventtime">
                                    <%=all_events[e]["time"] %>
                                </div>
                                <div class="eventlocation">
                                    <%=all_events[e]["location"] %>
                                </div>
                            <% } else { %>
                                <div class="daynumber"><%=i %></div>
                            <% } %>
                        <% } %>
                    </div>
                <% } %>
                <div class="empty"></div>
                <div class="empty"></div>
                <div class="empty"></div>
            </div>
        </div>
        </div>
    </div>
</body>
</html>