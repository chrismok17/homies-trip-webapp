<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/calendar.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@300&display=swap" rel="stylesheet">
    <title>Calendar</title>
</head>
<body>
    <nav class="navbar">
        <ul>
            <a href="/">
                Home
            </a>
            <a href="/event/calendar">
                Calendar
            </a>
            <a href="#">
                flights
            </a>
            <a href="#">
                hotels
            </a>
        </ul>
        
    </nav>  
    <div class="main">
        <div class="title">
            <h1>August 2022</h1>
            <div id="add_event">
                <a id="add_event_link" href="/event/add_event">
                    Add Event
                </a>
            </div>
        </div>
        <div id="calendar">
            <div id="calendar-header">
                <% for (let i = 0; i < days.length; i++) { %>
                    <h3 class="name"><%=days[i] %></h3>
                <% } %>
            </div>
            <div id="calendar-days">
                <div class="empty"></div>
                <% for (let i = 1; i <= 31; i++) { %>
                    <a class="event_on_day" href="/event/<%=i %>">
                    <div class="day" id="<%=i %>">
                        <div class="daynumber"><%=i %></div>
                        <% for (let e in all_events) { %>
                            <% if (all_events[e]["day"] == i) { %>
                                <div class="eventname" id="<%=i %>">
                                    <%=all_events[e]["name"] %>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                    </a>
                <% } %>
                <div class="empty"></div>
                <div class="empty"></div>
                <div class="empty"></div>
            </div>
        </div>
        </div>
    </div>
</body>
</html>